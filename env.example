# AWS Configuration
# Note: AWS Amplify doesn't allow variables starting with AWS_
# Use REGION instead of AWS_REGION
REGION=us-east-1

# DynamoDB Tables
CRM_USERS_TABLE=CRM-Users
CRM_PARTICIPANTS_TABLE=CRM-Participants
CRM_CAMPAIGNS_TABLE=CRM-Campaigns

# AWS SES Configuration
SES_FROM_EMAIL=noreply@precotracks.org
SES_REPLY_TO=noreply@precotracks.org

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Session Secret (generate a random string for production)
# You can generate one with: openssl rand -base64 32
SESSION_SECRET=change-me-in-production-use-random-string

# AWS Credentials
# These should be set via AWS CLI or environment variables
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# Or use AWS profiles: aws configure

